{
    "manifest_version": 2,
    "name": "React Chrome Extension",
    "version": "1.0",
    "description": "A simple Chrome extension built with React",
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "favicon-16x16.png",
            "48": "favicon-48x48.png",
            "128": "favicon-128x128.png"
        }
    },
    "permissions": ["activeTab"],
    "icons": {
        "16": "favicon-16x16.png",
        "48": "favicon-48x48.png",
        "128": "favicon-128x128.png"
    }
}
